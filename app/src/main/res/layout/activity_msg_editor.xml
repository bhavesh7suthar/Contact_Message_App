<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MsgEditor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter From Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="40dp">

        </TextView>

        <EditText
            android:id="@+id/from_name_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="for eg. Bhavesh">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter To Name"
            android:textColor="@color/black"
            android:textSize="20dp">

        </TextView>

        <EditText
            android:id="@+id/to_name_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="for eg. Bhavesh">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Msg"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black">

        </TextView>

        <EditText
            android:id="@+id/msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="for eg. hi">

        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/save_msg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:onClick="saveMsgButton"
        android:text="Save">

    </Button>

    <Button
        android:id="@+id/delete_msg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="deleteMsgButton"
        android:text="Delete">

    </Button>

</RelativeLayout>